{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=NorthstarLMS;User Id=sa;Password=LmsPassword123!;TrustServerCertificate=true;MultipleActiveResultSets=true",
    "TenantConnection": "Server=localhost,1433;Database=NorthstarLMSTenant;User Id=sa;Password=LmsPassword123!;TrustServerCertificate=true;MultipleActiveResultSets=true",
    "Redis": "localhost:6379",
    "Seq": "http://localhost:5341"
  },
  "MultiTenant": {
    "Enabled": true,
    "IsolationLevel": "Schema",
    "Tenants": {
      "oakland-unified": {
        "DisplayName": "Oakland Unified School District",
        "SchemaName": "oakland_unified",
        "ConnectionString": "Server=localhost,1433;Database=NorthstarLMSTenant;User Id=sa;Password=LmsPassword123!;TrustServerCertificate=true;MultipleActiveResultSets=true;ConnectRetryCount=3"
      },
      "berkeley-unified": {
        "DisplayName": "Berkeley Unified School District", 
        "SchemaName": "berkeley_unified",
        "ConnectionString": "Server=localhost,1433;Database=NorthstarLMSTenant;User Id=sa;Password=LmsPassword123!;TrustServerCertificate=true;MultipleActiveResultSets=true;ConnectRetryCount=3"
      }
    },
    "DefaultTenant": "oakland-unified"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "NorthstarLMS"
  },
  "Jwt": {
    "SecretKey": "NorthstarET.Lms.Development.SecretKey.ThisIsALongSecretKeyForDevelopmentOnly.DoNotUseInProduction!",
    "Issuer": "NorthstarET.Lms",
    "Audience": "NorthstarET.Lms.Api",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30
  },
  "EntraId": {
    "TenantId": "00000000-0000-0000-0000-000000000000",
    "ClientId": "00000000-0000-0000-0000-000000000000",
    "ClientSecret": "development-client-secret",
    "GraphApiUrl": "https://graph.microsoft.com/v1.0",
    "Scopes": [
      "https://graph.microsoft.com/User.Read.All",
      "https://graph.microsoft.com/Group.Read.All"
    ]
  },
  "DistrictQuotas": {
    "DefaultMaxStudents": 50000,
    "DefaultMaxStaff": 5000,
    "DefaultMaxAdmins": 100
  },
  "Compliance": {
    "RetentionPolicies": {
      "Student": 7,
      "Staff": 5,
      "Assessment": 3,
      "AuditRecord": 10
    },
    "AuditChain": {
      "EnableTamperEvidence": true,
      "HashAlgorithm": "SHA256"
    }
  },
  "ExternalServices": {
    "AssessmentStorage": {
      "ConnectionString": "UseDevelopmentStorage=true",
      "ContainerName": "assessments",
      "MaxFileSizeMB": 50
    }
  },
  "Performance": {
    "BulkOperations": {
      "BatchSize": 1000,
      "MaxConcurrentJobs": 5,
      "TimeoutMinutes": 120
    },
    "Caching": {
      "DefaultExpirationMinutes": 15,
      "RoleAssignmentExpirationMinutes": 60,
      "TenantContextExpirationMinutes": 30
    }
  },
  "HealthChecks": {
    "Enabled": true,
    "UI": {
      "Enabled": true
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:8080",
      "https://localhost:8080"
    ]
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": null,
          "bufferBaseFilename": "./logs/seq-buffer"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "ApplicationName": "NorthstarET.Lms.Api"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "NorthstarET.Lms": "Information"
    }
  },
  "AllowedHosts": "*"
}
