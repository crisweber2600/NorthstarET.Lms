{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=NorthstarLMS;User Id=sa;Password=LmsPassword123!;TrustServerCertificate=true;MultipleActiveResultSets=true",
    "TenantTemplate": "Server=localhost,1433;Database=NorthstarLMS;User Id=sa;Password=LmsPassword123!;TrustServerCertificate=true;MultipleActiveResultSets=true;ConnectRetryCount=3;Schema={SchemaName}"
  },
  "MultiTenant": {
    "Tenants": {
      "oakland-unified": {
        "DisplayName": "Oakland Unified School District",
        "SchemaName": "oakland_unified",
        "ConnectionString": "Server=localhost,1433;Database=NorthstarLMS;User Id=sa;Password=LmsPassword123!;TrustServerCertificate=true;MultipleActiveResultSets=true;ConnectRetryCount=3"
      },
      "berkeley-unified": {
        "DisplayName": "Berkeley Unified School District", 
        "SchemaName": "berkeley_unified",
        "ConnectionString": "Server=localhost,1433;Database=NorthstarLMS;User Id=sa;Password=LmsPassword123!;TrustServerCertificate=true;MultipleActiveResultSets=true;ConnectRetryCount=3"
      }
    },
    "DefaultTenant": "oakland-unified"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "NorthstarLMS"
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [
          "https://localhost:7000",
          "https://api.northstarlearning.com"
        ],
        "ValidIssuers": [
          "https://login.microsoftonline.com/{tenant-id}/v2.0"
        ]
      }
    }
  },
  "DistrictQuotas": {
    "DefaultMaxStudents": 50000,
    "DefaultMaxStaff": 5000,
    "DefaultMaxAdmins": 100
  },
  "Compliance": {
    "RetentionPolicies": {
      "Student": 7,
      "Staff": 5,
      "Assessment": 3,
      "AuditRecord": 10
    },
    "AuditChain": {
      "EnableTamperEvidence": true,
      "HashAlgorithm": "SHA256"
    }
  },
  "ExternalServices": {
    "EntraId": {
      "TenantId": "{tenant-id}",
      "ClientId": "{client-id}",
      "ClientSecret": "{client-secret}",
      "Scopes": [
        "https://graph.microsoft.com/User.Read.All",
        "https://graph.microsoft.com/Group.Read.All"
      ]
    },
    "AssessmentStorage": {
      "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=northstarlms;AccountKey={key};EndpointSuffix=core.windows.net",
      "ContainerName": "assessments",
      "MaxFileSizeMB": 50
    }
  },
  "Performance": {
    "BulkOperations": {
      "BatchSize": 1000,
      "MaxConcurrentJobs": 5,
      "TimeoutMinutes": 120
    },
    "Caching": {
      "DefaultExpirationMinutes": 15,
      "RoleAssignmentExpirationMinutes": 60,
      "TenantContextExpirationMinutes": 30
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "NorthstarET.Lms": "Information"
    },
    "ApplicationInsights": {
      "ConnectionString": "InstrumentationKey={key};IngestionEndpoint=https://westus2-3.in.applicationinsights.azure.com/;LiveEndpoint=https://westus2.livediagnostics.monitor.azure.com/"
    }
  },
  "AllowedHosts": "*"
}
